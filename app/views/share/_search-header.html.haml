.search__header.light-gray
  - if @search_patarn == 'chef-video'
    .search__header__word.font-bold
      = "「#{@chef.name}」さん"
      %span.font-normal
        = "の動画"
        .total-hit-count
          = result.total_count
  - elsif @search_patarn == 'series' && @search_word.present?
    .search__header__word.font-bold
      = "「#{@search_word}」"
      %span.font-normal
        ="シリーズの動画一覧"
        .total-hit-count
          = result.total_count
  - elsif @search_patarn == 'genre' && @search_word.present?
    .search__header__word
      %span.font-bold
        = "「#{@search_word}」"
      ="に関する動画"
      .total-hit-count
        = result.total_count
  - elsif @search_patarn == 'chef_genre' && @search_word.present?
    .search__header__word
      %span.font-bold
        = "「#{@search_word}」"
      ="専門の料理人一覧"
      .total-hit-count
        = result.total_count
  - elsif @search_word.present?
    .search__header__word
      = "検索キーワード"
      %span.font-bold
        = "「#{@search_word}」"
        .total-hit-count
          = result.total_count
  - elsif controller.controller_name == 'article' && action_name == 'index' && result.present?
    .search__header__word
      = "すべての記事"
      .total-hit-count
        - if params[:order] == 'new' || params[:order].nil?
          = all_article_count_for_index_page(result.total_count)
        - else
          = result.total_count
  - if @search_patarn != 'chef_genre' && (@search_patarn == 'chef-video' || @search_word.present? || result.present?)
    .search__header__order
      = form_tag(request.url, method: :get, id: "order-select") do
        = select_tag :order, options_for_select(show_order_select_list, selected: params[:order]), class: "order-select-btn"
        - if controller.controller_name == 'video' && @search_patarn == 'genre' && params[:suggest_patarn] == 'genre'
          = hidden_field_tag :suggest_patarn, 'genre'
          = hidden_field_tag :search_patarn, 'genre'
          = hidden_field_tag :search_word, @search_word
        - elsif controller.controller_name == 'video' && params[:suggest_patarn] == 'series'
          = hidden_field_tag :suggest_patarn, 'series'
          = hidden_field_tag :search_word, @search_word
        - elsif @search_patarn == 'genre'
          = hidden_field_tag :genre, @search_word
        - else
          = hidden_field_tag :search_word, @search_word
