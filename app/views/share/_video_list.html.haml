.v-list
  - videos.each do |video|
    .v-list__box
      = link_to video_path(video.id) do
        .v-list__box__thumbnail
          = image_tag video.thumbnail.url , alt: "video"
          - if new_video_check(video.created_at)
            .new-icon
              = image_tag "new.png",size: "50x50", alt: "new"
          .like-and-chef
            .date
              %p
                = fa_icon "heart"
                = video.like_count
            .chef
              %p
                = image_tag "chef_icon.png", alt: "chef"
                = video.series.chef.name
        .v-list__box__detail
          .v-list__box__detail__title
            %p
              = video.title
