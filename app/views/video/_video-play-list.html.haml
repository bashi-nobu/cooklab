.play-list.pc-only
  .play-list__title
    %span
      同じシリーズの動画
  .play-list__lists
    %ul
      - @series_videos.each do |sv|
        - if sv.id != @video.id
          = link_to video_path(sv.id) do
            %li
              .icon
                = adjust_play_list_icon(sv, @video)
                = "##{sv.video_order}"
              .title
                .text
                  = sv.title
             
        - else
          %li
            .icon
              = adjust_play_list_icon(sv, @video)
              = "##{sv.video_order}"
            .title
              .text
                = sv.title
            
.play-list.sp-only
  .hidden_box
    %label{for: "label1"}
      %span
        同じシリーズの動画
    %input{type: "checkbox", id: "label1", class: "accordion" }
    .hidden_show
      .play-list__lists
        %ul
          - @series_videos.each do |sv|
            - if sv.id != @video.id
              = link_to video_path(sv.id) do
                %li
                  .icon
                    = adjust_play_list_icon(sv, @video)
                    = "##{sv.video_order}"
                  .title
                    .text
                      = sv.title
            - else
              %li
                .icon
                  = adjust_play_list_icon(sv, @video)
                  = "##{sv.video_order}"
                .title
                  .text
                    = sv.title
